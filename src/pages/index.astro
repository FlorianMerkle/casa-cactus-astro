---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import ApartmentSection from '../components/ApartmentSection.astro';
import LocationSection from '../components/LocationSection.astro';
import PoolSection from '../components/PoolSection.astro';
import TargetAudienceSection from '../components/TargetAudienceSection.astro';
import BookingSection from '../components/BookingSection.astro';
import FAQSection from '../components/FAQSection.astro';
import FooterCTA from '../components/FooterCTA.astro';
import Footer from '../components/Footer.astro';

const title = "Casa Cactus – Ferienwohnung in Sagres nahe Strand & Pool";
const description = "Moderne Ferienwohnung in Sagres (Algarve) mit Terrasse, Poolzugang und kurzer Distanz zu den Stränden. Ideal für Paare. Jetzt Verfügbarkeit prüfen.";
---

<BaseLayout title={title} description={description}>
  <main>
    <HeroSection />
    <ApartmentSection />
    <LocationSection />
    <PoolSection />
    <TargetAudienceSection />
    <BookingSection />
    <FAQSection />
    <FooterCTA />
    <Footer />
  </main>
</BaseLayout>
