---
const currentYear = new Date().getFullYear();
const INSTAGRAM_URL = "https://www.instagram.com/casa.cactus.sagres";
---

<footer class="bg-foreground py-8">
  <div class="container mx-auto px-4 flex flex-col items-center gap-4">
    <a
      href={INSTAGRAM_URL}
      target="_blank"
      rel="noopener noreferrer"
      data-umami-event="instagram_click"
      data-umami-event-location="footer"
      class="text-primary-foreground/60 hover:text-primary-foreground transition-colors"
      aria-label="Casa Cactus auf Instagram"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="w-5 h-5"
      >
        <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
        <path d="M16 11.37a4 4 0 1 1-3.94-4.37 4 4 0 0 1 3.94 4.37z"></path>
        <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
      </svg>
    </a>
    <p class="text-primary-foreground/70 text-sm">
      © {currentYear} Casa Cactus – Ferienwohnung in Sagres, Algarve, Portugal
    </p>
  </div>
</footer>
